# Configuration d'environnement
NODE_ENV=development
LOGGING_LEVEL=debug
LOG_FORMAT=dev

# Configuration d'authentification
JWT_SECRET=local-development-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=1d
JWT_ISSUER=dev.mythayun.com

# URLs et points d'accès
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Email (utiliser MailHog ou similaire pour les tests)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test
EMAIL_PASS=test
EMAIL_FROM=dev@mythayun.com

# Base de données - MongoDB local ou Atlas
MONGODB_URI=mongodb://mongodb:27017/mythayun
# ou MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mythayun?retryWrites=true&w=majority